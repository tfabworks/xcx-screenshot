{
	"$schema": "https://biomejs.dev/schemas/1.5.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"useOptionalChain": "off",
				"noForEach": "off"
			},
			"suspicious": {
				"noAssignInExpressions": "off"
			},
			"style": {
				"useTemplate": "off",
				"noUselessElse": "off"
			}
		}
	}
}
